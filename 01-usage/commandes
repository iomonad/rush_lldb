# Set Breakpoints
breakpoint s -l 18 -o
breakpoint s -p "return (tmp|biggest).*"

# Prepare temporary variables
p int $tmp[3]       

# Set variable watchpoint        
w set variable count
w c a 1                    
"expr if (count != 0) $backup[count - 1] = tab[1]
continue
DONE"
c
w delete 1

p for (int i = 0; i < 3; i++) tab[i] = $tmp[i]; # copy tab in tmp array
n
p count = 0 # reset variable
c

# Recalculate f(average) return
p for (int i = 0; i < 3; i++) tab[i] = $tmp[i];
c

# Recalculate f(max) return
p expression for (int i = 0; i < 3; i++) tab[i] = $tmp[i];
c
